<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Anunturi.Mobile.Views.UserInfoView">
    
  <ContentView.Content>

        <StackLayout Orientation="Horizontal" Padding="10, 5">
            <Image Source="user_icon.png"/>
            <StackLayout Orientation="Vertical">
                <Label Text="{Binding EmployeeText}" Margin="0, 2, 0, 0" FontSize="Medium"/>
                <Label Text="{Binding RoleText}" Margin="0, -3, 0, 0" FontSize="Medium"/>
            </StackLayout>
        </StackLayout>
      
    </ContentView.Content>
</ContentView>